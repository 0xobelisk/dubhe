{
  "name": "obelisk-nextjs-template",
  "version": "0.0.1",
  "description": "Simple starter template",
  "author": "team@0xobelisk.com",
  "license": "GPL3",
  "scripts": {
    "dev": "pnpm run start-template",
    "dev-devnet": "pnpm run start-devnet-template",
    "dev-testnet": "pnpm run start-testnet-template",
    "start-template": "pnpm run localnode && sleep 5 && node src/scripts/index.js && obelisk faucet --network localnet && obelisk publish --network localnet --path src/chain/config.ts && next",
    "start-devnet-template": "node src/scripts/index.js && obelisk faucet --network devnet && obelisk publish --network devnet --path src/chain/config.ts && next",
    "start-testnet-template": "node src/scripts/index.js && obelisk publish --network testnet --path src/chain/config.ts && next",
    "start-mainnet-template": "node src/scripts/index.js && obelisk publish --network mainnet --path src/chain/config.ts && next",
    "next": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "test": "jest",
    "format": "prettier --write 'src/**/*ts'",
    "lint": "next lint",
    "worldgen": "obelisk schemagen obelisk.config.ts",
    "faucet-localnet": "obelisk faucet --network localnet",
    "faucet-devnet": "obelisk faucet --network devnet",
    "faucet-testnet": "obelisk faucet --network testnet",
    "worldpublsih-localnet": "obelisk publish --network localnet --path src/chain/config.ts",
    "worldpublsih-devnet": "obelisk publish --network devnet --path src/chain/config.ts",
    "worldpublsih-testnet": "obelisk publish --network testnet --path src/chain/config.ts",
    "worldpublsih-mainnet": "obelisk publish --network mainnet --path src/chain/config.ts",
    "world-upgrade": "obelisk upgrade --path src/chain/config.ts",
    "localnode": "nohup obelisk localnode > localnode.nohup.out &"
  },
  "dependencies": {
    "@0xobelisk/common": "^0.3.2",
    "@0xobelisk/client": "^0.3.2",
    "@0xobelisk/cli": "^0.3.5",
    "@mysten/sui.js": "^0.41.0",
    "@suiet/wallet-kit": "^0.2.19",
    "clsx": "^1.2.1",
    "ethos-connect": "^0.0.189",
    "framer-motion": "^10.12.16",
    "jotai": "^1.7.2",
    "next": "^12.1.6",
    "next-i18next": "^11.0.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-select": "^5.4.0",
    "swiper": "^9.2.4"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.15",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.2",
    "@types/node": "18.16.16",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.41.0",
    "eslint-config-next": "13.4.4",
    "jest": "^29.5.0",
    "jest-css-modules-transform": "^4.4.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "tailwind-scrollbar": "^2.1.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6"
  }
}

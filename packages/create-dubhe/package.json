{
  "name": "create-dubhe",
  "version": "1.2.0-pre.75",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xobelisk/dubhe.git"
  },
  "license": "MIT",
  "author": "team@obelisk.build",
  "type": "module",
  "bin": "bin/cli.js",
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "pnpm run type-check && pnpm run build:js",
    "build:js": "tsup && pnpm run copy-templates",
    "clean": "pnpm run clean:js",
    "clean:js": "shx rm -rf dist",
    "cocos-js-build": "cd cocos-lib-builder && npm i && browserify aptos.js -p esmify >  ../templates/cocos/aptos-template/assets/lib/dubhe.js && browserify sui.js -p esmify >  ../templates/cocos/sui-template/assets/lib/dubhe.js",
    "copy-templates": "tsx ./scripts/copy-templates.ts",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "validate": "pnpm format:check && pnpm lint && pnpm type-check"
  },
  "dependencies": {
    "browser-resolve": "^2.0.0",
    "browser-sync": "^2.29.3",
    "fast-glob": "^3.3.3",
    "yargs-interactive": "^3.0.1"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/minimist": "^1.2.2",
    "@types/prompts": "^2.4.3",
    "@types/yargs-interactive": "^2.1.6",
    "browserify": "^17.0.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "esmify": "^2.1.1",
    "kolorist": "^1.7.0",
    "prettier": "3.3.3",
    "prompts": "^2.4.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "dubhe-101-template",
  "version": "1.0.0",
  "description": "Simple dubhe sui 101 starter template",
  "scripts": {
    "dev": "mprocs",
    "dev:node": "pnpm dubhe node -f",
    "dev:indexer": "pnpm sqlite-indexer --force-regenesis",
    "dev:deploy": "pnpm dubhe publish && pnpm dubhe config-store --output-ts-path ./src/chain/config.ts --network localnet",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "pnpm format:check && pnpm type-check"
  },
  "dependencies": {
    "@0xobelisk/sui-cli": "link:/Volumes/project/dubhe/packages/sui-cli",
    "@0xobelisk/sui-client": "link:/Volumes/project/dubhe/packages/sui-client",
    "@0xobelisk/sui-common": "link:/Volumes/project/dubhe/packages/sui-common",
    "@0xobelisk/sui-indexer": "link:/Volumes/project/dubhe/packages/sui-indexer",
    "dotenv": "^16.4.5",
    "jotai": "^1.7.2",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^1.5.0",
    "viem": "2.21.19"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^18",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^9.1.0",
    "mprocs": "^0.7.1",
    "postcss": "^8",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}

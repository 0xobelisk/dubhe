<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="referrer" content="origin">

    {{#if title}}
    <title>{{ title }}</title>
    {{else}}
    <title>GraphiQL IDE</title>
    {{/if}}

    <style>
      body {
        height: 100%;
        margin: 0;
        width: 100%;
        overflow: hidden;
      }

      #graphiql {
        height: 100vh;
      }
    </style>
    <script
      crossorigin
      src="https://esm.sh/react@18/umd/react.development.js"
    ></script>
    <script
      crossorigin
      src="https://esm.sh/react-dom@18/umd/react-dom.development.js"
    ></script>
    <link rel="icon" href="https://graphql.org/favicon.ico">
    <link rel="stylesheet" href="https://esm.sh/graphiql@{{ version }}/graphiql.min.css" />
  </head>

  <body>
    <div id="graphiql">Loading...</div>
    <script
      src="https://esm.sh/graphiql@{{ version }}/dist/index.umd.js"
      type="application/javascript"
    ></script>
    <script>
      customFetch = (url, opts = {}) => {
        return fetch(url, {...opts, credentials: '{{ credentials }}'})
      }

      createUrl = (endpoint, subscription = false) => {
        // Use absolute path instead of relative to current page
        const baseUrl = window.location.origin;
        const url = new URL(baseUrl + endpoint);
        if (subscription) {
          url.protocol = url.protocol === 'https:' ? 'wss:' : 'ws:';
        }
        return url.toString();
      }

      ReactDOM.createRoot(document.getElementById("graphiql")).render(
        React.createElement(GraphiQL, {
          fetcher: GraphiQL.createFetcher({
            url: createUrl('{{ endpoint }}'),
            fetch: customFetch,
            {{#if subscription_endpoint}}
            subscriptionUrl: createUrl('{{ subscription_endpoint }}', true),
            {{/if}}
            {{#if headers}}
            headers: {
              {{#each headers}}'{{@key}}': '{{this}}',{{/each}}
            },
            {{/if}}
            {{#if ws_connection_params}}
            wsConnectionParams: {
              {{#each ws_connection_params}}'{{@key}}': '{{this}}',{{/each}}
            },
            {{/if}}
          }),
          defaultEditorToolsVisibility: true,
        })
      );
    </script>
  </body>
</html> 
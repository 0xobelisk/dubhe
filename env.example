# Dubhe Environment Configuration
# Copy this file to .env.local and fill in your values

# Node Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dubhe
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# API Configuration
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# External Services
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
APTOS_RPC_URL=https://fullnode.testnet.aptoslabs.com/v1
INITIA_RPC_URL=https://rpc.testnet.initia.tech
ROOCH_RPC_URL=https://rooch-testnet-rpc.0xobelisk.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/dubhe_test
TEST_REDIS_URL=redis://localhost:6379/1

# Production
PRODUCTION_URL=https://your-production-domain.com
PRODUCTION_API_KEY=your-production-api-key

# Staging
STAGING_URL=https://your-staging-domain.com
STAGING_API_KEY=your-staging-api-key 
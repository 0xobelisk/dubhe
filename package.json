{
  "name": "dubhe",
  "version": "0.5.0",
  "private": true,
  "description": "Dubhe is the fabric of autonomous worlds",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xobelisk/dubhe.git"
  },
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "fix:package-json": "sort-package-json package.json 'packages/*/package.json' 'templates/*/package.json' 'templates/*/packages/*/package.json' 'examples/*/package.json' 'examples/*/packages/*/package.json' 'e2e/*/package.json' 'e2e/*/packages/*/package.json' 'docs/package.json' 'test/*/package.json'",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "format:fix": "turbo run format:fix",
    "lint": "pnpm prettier:check && eslint . --ext .ts --ext .tsx",
    "prepare": "husky install",
    "prettier": "prettier --write '**/*.{ts,tsx,css,md,mdx,sol}'",
    "prettier:check": "prettier --check '**/*.{ts,tsx,css,md,mdx,sol}'",
    "test": "turbo run test",
    "test:typecheck": "turbo run test:typecheck",
    "test:unit": "turbo run test:unit",
    "type-check": "turbo run type-check",
    "validate": "turbo run validate"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md,mdx,sol}": "prettier --write",
    "package.json": "pnpm fix:package-json"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.10.0",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "chalk": "^5.2.0",
    "eslint": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "execa": "^7.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.8.4",
    "prettier-plugin-move": "^0.0.54",
    "prettier-plugin-solidity": "^1.1.2",
    "rimraf": "^5.0.0",
    "sort-package-json": "^3.4.0",
    "tsup": "8.3.0",
    "tsx": "4.19.0",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "graphql": "^15.8.0"
    }
  }
}

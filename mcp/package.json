{
  "name": "dubhe-mcp",
  "version": "1.0.0",
  "description": "Dubhe MCP AI Assistant - Multi-language, extensible AI capabilities integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dubhe-mcp": "bin/dubhe-mcp.js"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/cli.ts",
    "start": "node bin/dubhe-mcp.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm run test",
    "type-check": "tsc --noEmit",
    "docs": "typedoc src/index.ts --out docs",
    "example": "tsx examples/basic-usage.ts"
  },
  "keywords": [
    "dubhe",
    "mcp",
    "ai",
    "assistant",
    "multilingual",
    "typescript",
    "cli"
  ],
  "author": "Dubhe Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xobelisk/dubhe.git",
    "directory": "mcp"
  },
  "bugs": {
    "url": "https://github.com/0xobelisk/dubhe/issues"
  },
  "homepage": "https://github.com/0xobelisk/dubhe#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
